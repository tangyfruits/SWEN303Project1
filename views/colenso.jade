extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='../css/navbar-fixed-top.css', rel='stylesheet')

block body
  // Fixed navbar
  +navbar-fixed("Project: Colenso","navbar")
    +nav_item("/") Home

    +nav_item("/browse") Browse
    +nav_item("/edit") Edit
    +nav_item("/upload") Upload
    +nav_item("/about") About
    +nav_item("/xquery") XQuery
    form.navbar-form.navbar-left(action="/search", method="get", role='search')
      .form-group
        input.form-control(type='text', placeholder='Search', name="search_bar")
      button.btn.btn-default(type='submit') Submit


  .container
    // Main component for a primary marketing message or call to action
    .jumbotron
      ul.nav.nav-tabs
        li.nav.active
          a(href='#TEXT', data-toggle='tab') TEXT
        li.nav
          a(href='#RAW', data-toggle='tab') RAW
      // Tab panes
      .tab-content
        #TEXT.tab-pane.fade.in.active !{place}
        #RAW.tab-pane.fade #{place}
