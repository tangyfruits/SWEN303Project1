extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='../css/navbar-fixed-top.css', rel='stylesheet')

block body
  // Fixed navbar
  +navbar-fixed("Project: Colenso","navbar")
    +nav_item("/") Home
    +nav_item("xquery") XQuery
    +nav_item("browse") Browse
    +nav_item("edit") Edit
    +nav_item("upload") Upload
    +nav_item("about","active") About
    form.navbar-form.navbar-left(action="/", method="get", role='search')
      .form-group
        input.form-control(type='text', placeholder='Search', name="search_bar2")
      button.btn.btn-default(type='submit') Submit


  .container
    // Main component for a primary marketing message or call to action
    .jumbotron
      h1 Contribute XML
        p
          | Project Colenso is a website that displays XML files to do with William Colenso.
          | The website is written in Jade Bootstrap and the database is Basex.
