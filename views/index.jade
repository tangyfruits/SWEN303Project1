extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='../css/navbar-fixed-top.css', rel='stylesheet')

block body
  // Fixed navbar
  +navbar-fixed("Project: Colenso","navbar")
    +nav_item("/","active") Home
    +nav_item("xquery") XQuery
    +nav_item("browse") Browse
    +nav_item("edit") Edit
    +nav_item("upload") Upload
    +nav_item("about") About

    form.navbar-form.navbar-left(action="/", method="get", role='search')
      .form-group
        input.form-control(type='text', placeholder='Search', name="search_bar")
      button.btn.btn-default(type='submit') Submit


  .container
    .jumbotron
      h1 Project: Colenso
      p(style='white-space:pre;')
        | We are in !{place}
