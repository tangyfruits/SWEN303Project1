extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='../css/navbar-fixed-top.css', rel='stylesheet')

block body
  // Fixed navbar
  +navbar-fixed("Project: Colenso","navbar")
    +nav_item("/") Home
    +nav_item("xquery") XQuery
    +nav_item("browse") Browse
    +nav_item("edit") Edit
    +nav_item("upload","active") Upload
    +nav_item("about") About
    form.navbar-form.navbar-left(action="/", method="get", role='search')
      .form-group
        input.form-control(type='text', placeholder='Search', name="search_bar2")
      button.btn.btn-default(type='submit') Submit


  .container
    // Main component for a primary marketing message or call to action
    .jumbotron
      h1 Project: Colenso
      p
        |  Help us expand! Contribute an XML file!
      label(for='exampleInputFile') File input
      input#exampleInputFile.form-control-file(type='file')
      small.text-muted
        | This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.
      p
        | 
      button.btn.btn-primary(type='submit', name='file_submitted') Submit
